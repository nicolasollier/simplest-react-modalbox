{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonJS",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "jsx": "react",
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "rollup.config.js"]
}
